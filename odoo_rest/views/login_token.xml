<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="res_user_api_view_tree" model="ir.ui.view">
        <field name="name">Login Token</field>
        <field name="model">login.token</field>
        <field name="arch" type="xml">
            <tree string="Res Users">
                <field name="api_id"/>
                <field name="user_id"/>
                <field name="login_token"/>
            </tree>
        </field>
    </record>
    <record id="login_token_view_form" model="ir.ui.view">
        <field name="name">login.token.view.form</field>
        <field name="model">login.token</field>
        <field name="arch" type="xml">
            <form string="Create Login Token">
                <sheet>
                    <group>
                        <field name="api_id"/>
                        <field name="user_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>